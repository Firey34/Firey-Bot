generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRESQL_CONN")
}

model economy {
  memberid         String   @id @db.VarChar(100)
  points           Int      @default(0)
  lastgrantedpoint DateTime @default(now()) @db.Timestamp(6)
  members          members  @relation(fields: [memberid], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_memberid")
}

model members {
  id               String    @id @db.VarChar(100)
  tag              String
  rulesconfirmedon DateTime? @db.Timestamptz(6)
  economy          economy?
  twitch           twitch?
}

model twitch {
  memberid String  @id @db.VarChar(100)
  twitchid String? @db.VarChar(100)
  username String
  verified Boolean @default(false)
  members  members @relation(fields: [memberid], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_memberid")
}
