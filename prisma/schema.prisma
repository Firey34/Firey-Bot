generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["extendedWhereUnique"]
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRESQL_CONN")
}

model economy {
  memberid         String   @id @db.VarChar(100)
  points           Int      @default(0)
  lastgrantedpoint DateTime @default(now()) @db.Timestamp(6)
  members          members  @relation(fields: [memberid], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_memberid")
}

model members {
  id                                 String    @id @db.VarChar(100)
  tag                                String
  rulesconfirmedon                   DateTime? @db.Timestamptz(6)
  economy                            economy?
  modlog_modlog_memberidTomembers    modlog[]  @relation("modlog_memberidTomembers")
  modlog_modlog_moderatoridTomembers modlog[]  @relation("modlog_moderatoridTomembers")
  twitch                             twitch?
}

model twitch {
  id       String  @id @db.VarChar(100)
  memberid String  @unique @db.VarChar(100)
  username String
  verified Boolean @default(false)
  members  members @relation(fields: [memberid], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_memberid")
}

model modlog {
  id                                  Int      @id @default(autoincrement())
  memberid                            String   @db.VarChar(100)
  moderatorid                         String   @db.VarChar(100)
  action                              String
  reason                              String?
  timestamp                           DateTime @default(now()) @db.Timestamptz(6)
  members_modlog_memberidTomembers    members  @relation("modlog_memberidTomembers", fields: [memberid], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_memberid")
  members_modlog_moderatoridTomembers members  @relation("modlog_moderatoridTomembers", fields: [moderatorid], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_moderatorid")
}
